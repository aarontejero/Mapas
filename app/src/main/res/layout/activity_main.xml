<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.aaron_tejero.mapas.MainActivity">

    <TextView
        android:id="@+id/tvTexto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:layout_gravity="center"
        android:text="Valladolid YucatÃ¡n" />
    <TextView
        android:id="@+id/tvTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Sitios de Interes" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"

        >
    <Button

        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="Plaza Principal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:onClick="irMapa"
        />
    <Button

        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="Cenote Zaci"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:onClick="irCenote"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >
        <Button

            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="Convento San Bernardino"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:onClick="irConvento"
            />
        <Button

            android:layout_width="140dp"
            android:layout_height="140dp"
            android:text="Chichen Itza"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:onClick="irChichen"
            />
    </LinearLayout>

</LinearLayout>
